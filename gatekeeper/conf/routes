# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       		Application.index

# List all providers
GET /providers/fullList									Application.listAllProviders

# Add account
GET     /authorize/{userId}/{provider}/{email}          Application.authorizeEmail

# Upgrade token
# oauth_token=4%2FOlxepGuUkPerjcmjp8axuS_ybk4O
GET		/upgrade/{userId}/{provider}/{email}/{oauth_token}			Application.upgradeToken


# Ignore favicon requests
GET     /favicon.ico                            		404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                		staticDir:public

# Catch all
*       /{controller}/{action}                  		{controller}.{action}
