# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
# GET   /                                       							Application.index

# List all providers
GET 	/providers/all														Application.listAllProviders

# List active providers
GET 	/providers/active													Application.listActiveProviders

# Add user 
#POST		/user/add/{username}/{password}/{firstName}/{lastName}/{gender}/{zipCode}/{fbEmailAddress}/{fbUserId}			Application.addUser
POST		/user/add														Application.addUser

# Check username availability
GET     /user/available/{username}						     				Application.checkUsernameAvailable

# Check Authentication
GET     /login/{username}/{password}						    			Application.login

# Check Authentication
GET     /login/{fbUserId}									   	 			Application.fbIdlogin

# Add account /{userId}/{provider}/{email}
POST		/account/add						     						Application.addEmail

# Upgrade token {userId}/{provider}/{email}/{queryString}
POST	/account/upgradeEmailToken 											Application.upgradeToken

# Check if account is authorized
GET 	/account/verify/{userId}/{provider}/{email}							Application.verifyAccount

# Revoke access token {userId}/{password}/{provider}/{email}
POST	/account/revoke/													Application.revokeAccess

# Ignore favicon requests
GET     /favicon.ico                            							404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                							staticDir:public

# Catch all
*       /{controller}/{action}                  							{controller}.{action}
